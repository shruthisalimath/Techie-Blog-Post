<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="title mt-5">
    Edit Post
  </h2><hr>
  <form class="edit-post-form">
    <div>
      <label for="post-title"><b>Title</b></label>
      <input class="input" name="post-title"  type="text" value="{{post.title}}" />
    </div>

    <div>
      <label for="post-content"><b>Content</b></label>
      <textarea class="textarea" name="post-content" value="{{post.content}}"></textarea>
    </div>

    <div class="is-pulled-right">
      <p> Posted by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    
    <button class="button is-success" type="submit">Update post</button>
    
  </form>
</article>

<script src="/javascript/edit-post.js"></script>


