<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="title mt-5">
    Edit Post
  </h2><hr>
  <form class="edit-post-form">
    <div>
      <label for="post-title"><b>Title</b></label>
      <input class="input" name="post-title"  type="text" value="{{post.title}}" />
    </div>

    <div>
      <label for="post-content"><b>Comment</b></label>
      <input class="textarea" name="post-content" type="text" value="{{post.post-content}}" />
    </div>

    <div class="is-pulled-right">
      <p> Posted by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    
    <button class="button is-success" type="submit">Update post</button>
    <button type="button" class="button is-danger delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="feedback"></textarea>
  </div>

  <div>
    <button type="submit" >Add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/public/javascript/edit-post.js"></script>
<script src="/public/javascript/delete-post.js"></script>
<script src="/public/javascript/comment.js"></script>