<div class="container">
    <h2 class="title" style="margin-bottom: 20px;">Login</h2>

    <form class="signup-form">
        <div>
            <label for="username-signup"><b>Username:</b></label>
            <input type="text" id="username-signup" />
        </div>
        <div>
            <label for="email-signup"><b>Email:</b></label>
            <input type="text" id="email-signup" />
        </div>
        <div>
            <label for="password-signup"><b>Password:</b></label>
            <input type="password" id="password-signup" />
        </div>
        <div>
            <button class="button is-primary" type="submit" id="signup-btn">Sign Up</button>
            <a href="/login"><button type="button" class="button is-primary">Login Instead</button></a>
        </div>
    </form>
</div>

<script src="/javascript/signup.js"></script>