<div class="mb-5 pt-3">
  <a href="/dashboard/add/"><button type="button" id="newpost-btn" class="button is-primary ">New Post</button></a>
    <h2 class="title pb-4">Dashboard: Your Post</h2>
</div>

{{#if posts.length}}
<section>
    <h3>Your Posts</h3>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}"><button class="button mb-5 ml-5 is warning">Edit Post</button></a>
        </li>
        {{/each}}
    </ol>
</section>
{{else}}
<h6 class="pb-4 has-text-centered is-italic">you currently do not  have any posts!!</h6>

{{/if}}

